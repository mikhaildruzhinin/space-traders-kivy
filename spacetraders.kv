#:kivy 2.0.0

<ConnectPage>:
    id: connect_page
    orientation: 'vertical'
    padding: 10
    spacing: 10
    username: username
    token: token
    error_message: error_message

    Label:
        id: header
        text: 'Space Traders'
        color: 0, 1, 0, 1
        font_size: 50
    Label:
        id: username_label
        text: 'Username'
        color: 0, 1, 0, 1
        size_hint: .33, .1
        pos_hint: {'x': .33}
        valign: 'bottom'
    TextInput:
        id: username
        text: root.get_prev_user()[0]
        multiline: False
        size_hint: .33, .1
        pos_hint: {'x': .33}
    Label:
        id: token_label
        text: 'Token'
        color: 0, 1, 0, 1
        size_hint: .33, .1
        pos_hint: {'x': .33}
        valign: 'bottom'
    TextInput:
        id: token
        text: root.get_prev_user()[1]
        multiline: False
        password: True
        size_hint: .33, .1
        pos_hint: {'x': .33}
    CustomButton:
        id: submit
        text: 'Submit'
        size_hint: .20, .1
        pos_hint: {'x': .40}
        on_press: root.submit_button()

    Label:
        id: error_message
        color: 0, 1, 0, 1
        size_hint: .33, .1
        pos_hint: {'x': .33}
    Label:
        id: status
        text: root.check_server_status()
        color: 0, 1, 0, 1
        size_hint: 1, 1
        text_size: self.size
        valign: 'bottom'
        halign: 'center'

<GamePage>:
    id: game_page
    orientation: 'vertical'
    padding: 10
    spacing: 10
    username: self.get_username()
    user_info: self.get_user_info()
    main_content: main_content

    BoxLayout:
        id: header
        orientation: 'vertical'
        size_hint: 1, .05
        padding: 5
        spacing: 5
        CustomButton:
            id: header_label
            text: f'{root.username}    \u20B9 {root.user_info["credits"]}'
            color: 0, 1, 0, 1
            background_color: 0, 1, 0, 1
            canvas.before:
                Color:
                    rgba: 0, 1, 0, 1
                Line:
                    width: 2
                    rectangle: self.x, self.y, self.width, self.height
                Color:
                    rgba: 0, 1, 0, .33
                Rectangle:
                    size: self.size
                    pos: self.pos

    BoxLayout:
        id: body
        orientation: 'horizontal'

        BoxLayout:
            id: sidebar
            orientation: 'vertical'
            size_hint: .2, 1
            padding: 5
            spacing: 5
            CustomButton:
                id: flight_plans
                text: 'Flight plans'
                on_press: main_content_label.text = self.text
            CustomButton:
                id: loans_button
                text: 'Loans'
                on_press: root.loans_button()
            CustomButton:
                id: locations_button
                text: 'Locations'
                on_press: main_content_label.text = self.text
            CustomButton:
                id: market_button
                text: 'Market'
                on_press: main_content_label.text = self.text
            CustomButton:
                id: ships_button
                text: 'Ships'
                on_press: main_content_label.text = self.text
            Label:
                id: dummy_label
                size_hint: 1, 1
                canvas.before:
                    Color:
                        rgba: 0, 1, 0, 1
                    Line:
                        width: 2
                        rectangle: self.x, self.y, self.width, self.height
                    Color:
                        rgba: 0, 1, 0, .33
                    Rectangle:
                        size: self.size
                        pos: self.pos

        BoxLayout:
            id: main
            orientation: 'vertical'
            BoxLayout:
                id: main_content
                orientation: 'vertical'
                Label:
                    id: main_content_label
                    text: f'Welcome, {root.username}!'
                    color: 0, 1, 0, 1
            Label:
                id: footer
                color: 0, 1, 0, 1
                size_hint: 1, .05

<Loans>:
    id: loans
    orientation: 'horizontal'
    user_loans_label: user_loans_label

    RV:
        id: rv_test
        size_hint: .4, 1
    Label:
        id: user_loans_label
        color: 0, 1, 0, 1
        text_size: self.size
        valign: 'top'
        halign: 'center'

<RV>:
    viewclass: 'CustomButton'
    RecycleBoxLayout:
        default_size: None, 200
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'

<CustomButton@Button>:
    size_hint: 1, .075
    color: 0, 1, 0, 1
    background_color: 0, 1, 0, 1
    canvas.before:
        Color:
            rgba: 0, 1, 0, 1
        Line:
            width: 2
            rectangle: self.x, self.y, self.width, self.height
